@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="container-scroller">
    <div class="container-fluid  page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0 justify-content-center">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-12 mx-auto">
                    <div class="card-body px-5 py-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form method="post" asp-action="Register">
                            <div class="form-group">

                                <input asp-for="FullName" class="form-control p_input" placeholder="FullName">
                                <label asp-validation-for="FullName" class="text-danger"></label>
                            </div>
                            <div class="form-group">

                                <input asp-for="Username" class="form-control p_input" placeholder="Username">
                                <label asp-validation-for="Username" class="text-danger"></label>
                            </div>
                            <div class="form-group">

                                <input asp-for="Email" class="form-control p_input" placeholder="Email">
                                <label asp-validation-for="Email" class="text-danger"></label>
                            </div>
                            <div class="form-group">

                                <input asp-for="Password" placeholder="Password" class="form-control p_input">
                                <label asp-validation-for="Password" class="text-danger"></label>
                            </div>
                            <div class="form-group">

                                <input asp-for="ConfirmPassword" class="form-control p_input" placeholder="ConfirmPassword">
                                <label asp-validation-for="ConfirmPassword" class="text-danger"></label>
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-between">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input"> Remember me
                                    </label>
                                </div>
                                <a href="#" class="forgot-pass">Forgot password</a>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">Sign Up</button>
                            </div>

                            <p class="sign-up text-center">Already have an Account?<a href="#">Login</a></p>

                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}

